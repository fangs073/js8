nav-btn-bg = #9b59b6;
nav-bar-link-color = #95a5a6
jumbo-height = 150px
jumbo-width = 300px
background = #ecf0f1
footer-color = #34495e
blue = #2980b9
light-grey = #95a5a6
dark-grey = #7f8c8d
green = #1abc9c

body
	background dark-grey

a
	text-decoration none
	color black

.sign-up-link
	margin 10px 0
	font-size 150%
	a
		color blue

.main
	text-align center
	background white
	width 500px
	margin auto
	border-right 20px solid light-grey
	border-left 20px solid light-grey
	border-bottom 10px solid light-grey
	padding 5px 10px
	
.buttons
	list-style-type none
	padding 0
	& a
		background nav-btn-bg
		width 100%
		display inline-block
		
.nav-bar .buttons
	width 100%
	margin auto
	text-align center
	& a
		width 20%
		background nav-btn-bg
		border 1px solid white
		padding 5px
		color nav-bar-link-color

.nav-bar
	width 98%
	margin auto
	padding 5px
	background-color green

.jumbotron
	position relative
	margin auto
	width 500px
	padding-top 10px

.jumbotron-bg
	position relative
	
.jumbotron-title,
.jumbotron-subtitle
	position absolute
	
.jumbotron-title
	top 0
	left 5px
	
.jumbotron-subtitle
	bottom 0
	right 5px
	
.main-page-content
	padding-top 10px
	
.paragraph-content
	display inline-block
	
.footer
	display block
	background-color footer-color
	margin 5px
	padding 10px
	a
		color white